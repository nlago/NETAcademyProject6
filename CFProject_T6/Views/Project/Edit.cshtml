
@model CFProject_T6.Models.ProjectEdit

<h2>Here you can edit your project</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Project.Id" />
            <div class="form-group">
                <label asp-for="Project.Title" class="control-label"></label>
                <input asp-for="Project.Title" class="form-control" />
                <span asp-validation-for="Project.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Descr" class="control-label"></label>
                <input asp-for="Project.Descr" class="form-control" />
                <span asp-validation-for="Project.Descr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Goalfunds" class="control-label"></label>
                <input asp-for="Project.Goalfunds" class="form-control" />
                <span asp-validation-for="Project.Goalfunds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.CategoryId" class="control-label"></label>
                <select asp-for="Project.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Project.CategoryId" class="text-danger"></span>
            </div>
            <span class="error" style="color:red;">@ViewData["Wrong Date"]</span>
            <div class="form-group">
                <label asp-for="Project.StartDate" class="control-label"></label>
                <input asp-for="Project.StartDate" class="form-control" />
                <span asp-validation-for="Project.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.EndDate" class="control-label"></label>
                <input asp-for="Project.EndDate" class="form-control" />
                <span asp-validation-for="Project.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
