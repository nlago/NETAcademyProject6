@model CFProject_T6.Models.PackagesVM

@{
    ViewData["Title"] = "Packages";
}

<h2>Packages</h2>

@if (Model.IsCreator)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>

}

<table class="table">
    <thead>
        <tr>
            <th>
                Donation Amount
            </th>
            <th>
                Reward
            </th>

            <th>
                Corresponding Project
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Packages)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DonationUpperlim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Title)
                </td>
                <td>
                    | <a href="@Url.Action("create", "BackersProjects", new { project_id = item.ProjectId, package_id = item.Id })">Purchase</a> |                    
                </td>
            </tr>
        }
    </tbody>
</table>
